typedef char TNombrej1[5];
typedef char TApellidoj1[10];

typedef struct{

TNombrej1 nombrej1;
TApellidoj1 apellidoj1;

}TJugadorj1;

TJugadorj1 namejugador1;

printf("Jugador 1, introduzca su nombre (m치ximo 5 caracteres): ");
scanf("%s", namejugador1.nombrej1);

printf("%s, introduzca su primer apellido (m치ximo 10 caracteres): ", namejugador1.nombrej1);
scanf("%s", namejugador1.apellidoj1);

printf("Jugador 1, su nombre es %s y su apellido %s\n",namejugador1.nombrej1, namejugador1.apellidoj1);


